<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#68cffa"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <View
            android:layout_width="1px"
            android:layout_height="16dp"
            android:background="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="折线图"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_corners"
        android:orientation="vertical">

        <com.example.ghl.simplelinechartdemo.SwitchButton
            android:id="@+id/mSwitchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="14dp" />

        <com.example.ghl.simplelinechartdemo.SimpleLineChartView
            android:id="@+id/mLineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mSwitchButton"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="20dp" />


    </RelativeLayout>

</LinearLayout>
